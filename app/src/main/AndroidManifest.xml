<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kuetapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="LoveTalk"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KuetApp">
        <activity android:name="com.example.kuetapp.imageViewLayout"></activity>
        <activity android:name="com.example.kuetapp.MainActivity"></activity>
        <activity android:name="com.example.kuetapp.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kuetapp.RegisterActivity" />
        <activity
            android:name="com.example.kuetapp.SettingsActivity"
            android:parentActivityName="com.example.kuetapp.MainActivity" />
        <activity android:name="com.example.kuetapp.GroupChatActivity" />
        <activity android:name="com.example.kuetapp.PhoneLoginActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.example.kuetapp.FindFriendsActivity"
            android:parentActivityName="com.example.kuetapp.MainActivity" />
        <activity android:name="com.example.kuetapp.ProfileActivity" />
        <activity
            android:name="com.example.kuetapp.ChatActivity"
            android:parentActivityName="com.example.kuetapp.MainActivity" />
    </application>

</manifest>